<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="7.0sp" >

    <LinearLayout
        android:layout_width="150.0sp"
        android:layout_height="fill_parent"
        android:layout_weight="0.5"
        android:orientation="vertical" >

        <TextView
            android:id="@id/clock_city"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:gravity="top"
            android:singleLine="true"
            android:text="Null"
            android:textColor="#ff000000"
            android:textSize="25.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@id/clock_state"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="bottom"
            android:text="Null"
            android:textColor="#ff000000"
            android:textSize="11.0sp" />
    </LinearLayout>

    <TextView
        android:id="@id/clock_display"
        android:layout_width="90.0sp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:background="@drawable/item_bg_indent"
        android:gravity="center"
        android:text="00:00"
        android:textColor="#ff000000"
        android:textSize="22.0sp" />

    <LinearLayout
        android:layout_width="150.0sp"
        android:layout_height="fill_parent"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:visibility="gone" >

        <Button
            android:id="@id/up_btn"
            android:layout_width="70.0sp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/item_bg_indent"
            android:gravity="center"
            android:text="@string/up"
            android:textColor="#ff000000"
            android:textSize="10.0sp" />

        <Button
            android:id="@id/down_btn"
            android:layout_width="70.0sp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/item_bg_indent"
            android:gravity="center"
            android:text="@string/down"
            android:textColor="#ff000000"
            android:textSize="10.0sp" />
    </LinearLayout>

    <TextView
        android:id="@id/distance"
        android:layout_width="60.0sp"
        android:layout_height="fill_parent"
        android:layout_gravity="right|center"
        android:gravity="center"
        android:text="null"
        android:textColor="#ff000000"
        android:textSize="11.0sp" />

</LinearLayout>